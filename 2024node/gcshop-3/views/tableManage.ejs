<div class="container">
    <h1>테이블 목록</h1>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>테이블 명</th>
            <th>테이블 설명</th>
        </tr>
        </thead>
        <tbody>
        <% tables.forEach(function(table) { %>
            <tr>
                <td><a href="/table/view/<%= table.TABLE_NAME %>"><%= table.TABLE_NAME %></a></td>
                <td><%= table.TABLE_COMMENT || '설명 없음' %></td>
            </tr>
        <% }); %>
        </tbody>
    </table>
</div>

<style>
    .table th {
        background-color: #a1b4e1; /* 밝은 하늘색 배경 */
        color: #000; /* 검정색 글씨 */
        font-weight: bold; /* 굵은 글씨 */
        text-align: center; /* 가운데 정렬 */
    }
    .table td {
        text-align: center; /* 내용 가운데 정렬 */
    }
</style>