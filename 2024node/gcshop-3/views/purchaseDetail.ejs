<table class="table table-bordered">
    <% if (product) { %>
        <form id="cartForm">
            <tr>
                <td rowspan="5">
                    <img src="/image/<%= product.image %>" style="width:300px;height:300px; justify-items: center">
                </td>
                <td><strong>상품명: <%= product.name %></strong></td>
            </tr>
            <tr>
                <td>가격: <%= product.price %> 원</td>
            </tr>
            <tr>
                <td>브랜드: <%= product.brand %></td>
            </tr>
            <tr>
                <td>
                    수량: <input type="number" id="qty" name="qty" min="1" max="<%= product.stock %>" required>
                </td>
            </tr>
            <input type="hidden" id="mer_id" value="<%= product.mer_id %>">
            <tr>
                <td>
                    <button class="btn btn-outline-primary btn-sm" formaction="/purchase" type="submit">결제</button>
                    <button id="addToCartBtn" class="btn btn-outline-primary btn-sm" type="button">장바구니</button>
                </td>
            </tr>
        </form>
    <% } else { %>
        <tr>
            <td colspan="2">상품 정보를 불러올 수 없습니다.</td>
        </tr>
    <% } %>
</table>
