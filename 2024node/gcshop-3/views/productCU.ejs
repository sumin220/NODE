<div class="container">
    <script>
        function displayFileName() {
            var filePath = $("#file").val();
            var fileName = filePath.split('\\').pop(); // 파일 이름만 추출
            $(".upload-name").val(fileName);
        }

        function toggleSalePrice() {
            const isSale = document.getElementById("sale_yn_yes").checked;
            document.getElementById("sale_price").disabled = !isSale;
            if (!isSale) {
                document.getElementById("sale_price").value = ""; // No 선택 시 할인가격 초기화
            }
        }

        window.onload = toggleSalePrice; // 페이지 로드 시 초기 상태 설정
    </script>

    <% if (mer === null) { %>
        <h2>상품 입력</h2>
    <form action="/product/create_process" method="post" enctype="multipart/form-data" accept-charset="UTF-8">
        <div class="mb-3">
            <label class="form-label" for="id_main">카테고리 </label>
            <select name="category" id="id_main">
                <% var i = 0;
                        while (i < categorys.length) {
                    var ids = categorys[i].main_id + categorys[i].sub_id; %>
                <option value="<%= ids %>">
                    <%= categorys[i].main_name %> : <%= categorys[i].sub_name %>
                </option>
                <% i += 1; } %>
            </select>
        </div>

        <table>
            <tr><td>
                    <div class="mb-3">
                        <label class="form-label" for="id">제품명</label>
                        <input class="form-control" type="text" name="name" style="width:300px;" />
                    </div>
                </td>
                <td width="30px"></td>
                <td>
                    <div class="mb-3">
                        <label class="form-label" for="id">가격</label>
                        <input class="form-control" type="text" name="price" style="width:300px;" />
                    </div>
                </td>
            </tr>

            <tr><td>
                    <div class="mb-3">
                        <label class="form-label" for="id">재고</label>
                        <input class="form-control" type="text" name="stock" style="width:300px;" />
                    </div>
                </td><td width="30px"></td><td>
                    <div class="mb-3">
                        <label class="form-label" for="id">브랜드</label>
                        <input class="form-control" type="text" name="brand" style="width:300px;" />
                    </div>
                </td>
            </tr>

            <tr><td>
                    <div class="mb-3">
                        <label class="form-label" for="id">공급자</label>
                        <input class="form-control" type="text" name="supplier" style="width:300px;" />
                    </div>
                </td><td width="30px"></td><td>
                    <div class="mb-3">
                        <label class="form-label" for="sale_yn">할인 여부</label><br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="sale_yn" id="sale_yn_yes" value="Y" onchange="toggleSalePrice()">
                            <label class="form-check-label" for="sale_yn_yes">Yes</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="sale_yn" id="sale_yn_no" value="N" onchange="toggleSalePrice()">
                            <label class="form-check-label" for="sale_yn_no">No</label>
                        </div>
                    </div>
                </td>
            </tr>

            <tr>
                <td>
                    <div class="mb-3">
                        <label class="form-label" for="sale_price">할인가격</label>
                        <input class="form-control" type="text" name="sale_price" id="sale_price" style="width:300px;" />
                    </div>
                </td><td width="30px"></td>
                <td>
                </td>
            </tr>
        </table>

        <div class="mb-3">
            <input class="upload-name" value="" name="image" placeholder="이미지파일">
            <input type="file" id="file" name="uploadFile" onchange="displayFileName()">
        </div>

        <% } else { %>
            <h2>상품 수정</h2>
        <form action="/product/update_process" method="post" enctype="multipart/form-data" accept-charset="UTF-8">
            <div class="mb-3">
                <label class="form-label" for="id_main">카테고리 </label>
                <select name="category" id="id_main">
                    <% var i = 0;
                            while (i < categorys.length) {
                        var selected = "";
                        var ids = categorys[i].main_id + categorys[i].sub_id;
                        var ids2 = mer[0].main_id + mer[0].sub_id;
                        if (ids === ids2) selected = 'selected'; %>
                    <option value="<%= ids %>" <%= selected %>>
                        <%= categorys[i].main_name %> : <%= categorys[i].sub_name %>
                    </option>
                    <% i += 1; } %>
                </select>
            </div>

            <table>
                <tr><td>
                        <input class="form-control" value="<%= mer[0].mer_id %>" type="hidden" name="merId" style="width:300px;" />
                        <div class="mb-3">
                            <label class="form-label" for="id">제품명</label>
                            <input class="form-control" value="<%= mer[0].name %>" type="text" name="name" style="width:300px;" />
                        </div>
                    </td>
                    <td width="30px"></td>
                    <td>
                        <div class="mb-3">
                            <label class="form-label" for="id">가격</label>
                            <input class="form-control" value="<%= mer[0].price %>" type="text" name="price" style="width:300px;" />
                        </div>
                    </td>
                </tr>

                <tr><td>
                        <div class="mb-3">
                            <label class="form-label" for="id">재고</label>
                            <input class="form-control" value="<%= mer[0].stock %>" type="text" name="stock" style="width:300px;" />
                        </div>
                    </td><td width="30px"></td><td>
                        <div class="mb-3">
                            <label class="form-label" for="id">브랜드</label>
                            <input class="form-control" value="<%= mer[0].brand %>" type="text" name="brand" style="width:300px;" />
                        </div>
                    </td>
                </tr>

                <tr><td>
                        <div class="mb-3">
                            <label class="form-label" for="id">공급자</label>
                            <input class="form-control" value="<%= mer[0].supplier %>" type="text" name="supplier" style="width:300px;" />
                        </div>
                    </td><td width="30px"></td><td>
                        <div class="mb-3">
                            <label class="form-label" for="sale_yn">할인 여부</label><br>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="sale_yn" id="sale_yn_yes" value="Y" <% if (mer[0].sale_yn === 'Y') { %> checked <% } %> onchange="toggleSalePrice()">
                                <label class="form-check-label" for="sale_yn_yes">Yes</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="sale_yn" id="sale_yn_no" value="N" <% if (mer[0].sale_yn === 'N') { %> checked <% } %> onchange="toggleSalePrice()">
                                <label class="form-check-label" for="sale_yn_no">No</label>
                            </div>
                        </div>
                    </td>
                </tr>

                <tr>
                    <td>
                        <div class="mb-3">
                            <label class="form-label" for="sale_price">할인가격</label>
                            <input class="form-control" type="text" name="sale_price" id="sale_price" value="<%= mer[0].sale_price %>" style="width:300px;" />
                        </div>
                    </td><td width="30px"></td>
                    <td>
                    </td>
                </tr>
            </table>

            <div class="mb-3">
                <input class="upload-name" value="<%= mer[0].image %>" name="image" placeholder="이미지파일">
                <input type="file" id="file" name="uploadFile" onchange="displayFileName()">
            </div>
            <% } %>

            <button class="btn btn-outline-primary btn-sm" type="submit">입력</button>
            &nbsp;&nbsp;&nbsp;
            <a href="#"><button class="btn btn-outline-primary btn-sm" type="button">제품목록 돌아가기</button></a>
        </form>
</div>