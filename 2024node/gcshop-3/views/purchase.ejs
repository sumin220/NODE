<div class="container">
    <h1>구매 내역</h1>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>상품</th>
            <th>상품명</th>
            <th>단가</th>
            <th>구매량</th>
            <th>총금액</th>
            <th>구매일</th>
            <th>취소 여부</th>
        </tr>
        </thead>
        <tbody>
        <% if (purchases && purchases.length > 0) { %>
            <% purchases.forEach(function(purchase) { %>
                <tr>
                    <td>
                        <img src="/image/<%= purchase.image %>" alt="<%= purchase.name %>" style="width: 100px; height: 100px;">
                    </td>
                    <td><%= purchase.name %></td>
                    <td><%= purchase.price %> 원</td>
                    <td><%= purchase.qty %></td>
                    <td><%= purchase.total %> 원</td>
                    <td><%= purchase.date %></td>
                    <td>
                        <% if (purchase.cancel === 'N') { %>
                            <form action="/purchase/cancel/<%= purchase.purchase_id %>" method="post" style="display: inline-block;">
                                <button class="btn btn-outline-danger btn-sm" type="submit">구매취소</button>
                            </form>
                        <% } else { %>
                            <span>취소된 상품</span>
                        <% } %>
                    </td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="7" style="text-align: center;">구매 내역이 없습니다.</td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>


<style>
    .container {
        margin: 20px auto;
        max-width: 100%;
        padding: 0 20px;
        text-align: center;
    }

    h1 {
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 30px;
        text-align: center;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin: 0 auto;
        text-align: center;
    }

    .table thead th {
        background-color: #f4f4f4;
        font-weight: bold;
        border: 1px solid #ddd;
        padding: 15px;
    }

    .table tbody td {
        border: 1px solid #ddd;
        padding: 15px;
        text-align: center;
        vertical-align: middle;
    }

    .table img {
        display: block;
        margin: 0 auto;
        border-radius: 5px;
    }

    .btn {
        display: inline-block;
        padding: 5px 15px;
        font-size: 14px;
        text-align: center;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-outline-danger {
        color: #dc3545;
        border: 1px solid #dc3545;
        background-color: #fff;
    }

    .btn-outline-danger:hover {
        color: #fff;
        background-color: #dc3545;
    }

    .no-purchase {
        text-align: center;
        font-size: 16px;
        color: #888;
        padding: 20px;
    }
</style>
